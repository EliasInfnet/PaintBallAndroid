<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack1"
    tools:context=".FragmentsApp.Perfil.Perfil_HomeFragment">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/perfil_home_toolbar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorBack1"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:fontFamily="sans-serif-light"
                android:text="Perfil"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/fundo_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rlt_lyo_ft_perfil_home"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp">

                    <RelativeLayout
                        android:id="@+id/ft_perfil_lyo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/perfil_icon_back" >

                        <ImageView
                            android:id="@+id/ft_perfil"
                            android:layout_marginHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/nome_txt_perfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_toEndOf="@+id/ft_perfil_lyo"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal"
                        android:text="Nome"
                        android:textColor="@android:color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_localidade_perfil"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/nome_txt_perfil"
                        android:layout_gravity="center_horizontal"
                        android:layout_below="@id/nome_txt_perfil"
                        android:fontFamily="sans-serif-light"
                        android:text="Localidade nao registrada"
                        android:gravity="start"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/btn_logout"
                        android:layout_height="35dp"
                        android:layout_width="70dp"
                        android:text="Sair"
                        android:textSize="12dp"
                        android:background="@drawable/back_card_local"
                        android:backgroundTint="@color/colorAccent3"
                        android:textColor="@color/colorBack1"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        />

                </RelativeLayout>



                <ImageView
                    android:id="@+id/divisoria_perfil_saldo"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/rlt_lyo_ft_perfil_home"
                    android:src="@drawable/p_saldo_shape_perfil"/>

                <RelativeLayout
                    android:id="@+id/rlt_lyo_saldo_perfil_home"
                    android:layout_marginTop="5dp"
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/divisoria_perfil_saldo"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:id="@+id/rlt_lyo_partidas_totais"
                        android:layout_centerVertical="true"
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/partidas_totais_txt_perfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="27dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/partidas_totais_int_perfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/partidas_totais_txt_perfil"
                            android:gravity="center"
                            android:fontFamily="sans-serif-light"
                            android:text="partidas"
                            android:textSize="13dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlt_lyo_partidas_ganhas"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_width="91dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/partidas_ganhas_txt_perfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="27dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/partidas_totais_int_perfil2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/partidas_ganhas_txt_perfil"
                            android:gravity="center"
                            android:fontFamily="sans-serif-light"
                            android:text="vitórias"
                            android:textSize="13dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlt_lyo_desempenho"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="91dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/desempenho_txt_perfil2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:fontFamily="sans-serif-light"
                            android:text="Nan%"
                            android:textColor="@android:color/white"
                            android:textSize="27dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/desempenho_int_perfil2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/desempenho_txt_perfil2"
                            android:gravity="center"
                            android:fontFamily="sans-serif-light"
                            android:text="desempenho"
                            android:textSize="13dp" />

                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/divisoria_saldo_sobre"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/rlt_lyo_saldo_perfil_home"
                    android:src="@drawable/p_saldo_shape_perfil"/>

                <TextView
                    android:id="@+id/txt_sobre_titulo"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/divisoria_saldo_sobre"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:text="Sobre"
                    android:textColor="@android:color/white"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_sobre_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_sobre_titulo"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="sans-serif-light"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="15sp" />


                <RelativeLayout
                    android:id="@+id/rlt_lyo_nivel"
                    android:layout_marginTop="15dp"
                    android:layout_alignStart="@id/rlt_lyo_telefone"
                    android:layout_below="@id/txt_sobre_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icone_nivel"
                        android:layout_width="20dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_star_black_24dp" />

                    <TextView
                        android:id="@+id/txt_nivel"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:layout_toRightOf="@id/icone_nivel"
                        android:fontFamily="sans-serif-light"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:text="Intermediário"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_lyo_telefone"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/rlt_lyo_nivel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icone_telefone"
                        android:layout_width="20dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_phone_black_24dp" />

                    <TextView
                        android:id="@+id/txt_telefone"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:textIsSelectable="true"
                        android:layout_toRightOf="@id/icone_telefone"
                        android:fontFamily="sans-serif-light"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:text="Telefone nao registrado"
                        />

                </RelativeLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_editar_prefil"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_shape1"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:text="Editar perfil"
                android:textSize="12dp"
                />




        </LinearLayout>
    </ScrollView>


</RelativeLayout>