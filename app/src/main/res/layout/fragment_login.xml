<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorBack1"
    tools:context=".FragmentsInicial.LoginFragment">

    <Button
        android:id="@+id/btn_acessar"
        android:layout_width="171dp"
        android:layout_height="49dp"
        android:background="@drawable/btn_shape1"
        android:text="Acessar"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorBack1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79" />

    <EditText
        android:id="@+id/edt_usuario_login"
        android:layout_width="249dp"
        android:layout_height="68dp"
        android:background="@drawable/edt_txt_format1"
        android:ems="10"
        android:gravity="start|center"
        android:fontFamily="sans-serif-light"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="50dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <EditText
        android:id="@+id/edt_senha_login"
        android:layout_width="249dp"
        android:layout_height="68dp"
        android:background="@drawable/edt_txt_format1"
        android:ems="10"
        android:gravity="start|center"
        android:hint="Senha"
        android:fontFamily="sans-serif-light"
        android:inputType="textPassword"
        android:paddingLeft="50dp"
        android:textSize="20dp"
        android:maxLength="18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.616" />

    <ImageView
        android:id="@+id/Icon_Login"
        android:layout_width="158dp"
        android:layout_height="152dp"
        android:src="@drawable/paint_icon1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="189dp"
        android:layout_height="66dp"
        android:gravity="center"
        android:text="Login"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357" />

    <TextView
        android:id="@+id/txt_cadastrar_login"
        android:layout_width="235dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="Ainda nÃ£o sou cadastrado"
        android:fontFamily="sans-serif-light"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_acessar"
        app:layout_constraintVertical_bias="0.1" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_edt_usuario_login"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_usuario_login"
        app:layout_constraintEnd_toEndOf="@+id/edt_usuario_login"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="@+id/edt_usuario_login"
        app:layout_constraintTop_toTopOf="@+id/edt_usuario_login"
        app:layout_constraintVertical_bias="0.526"
        app:lottie_autoPlay="false"
        app:lottie_fileName="lf30_editor_hsMmb6.json"
        app:lottie_loop="false" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_usuarioInvalido_login"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_acessar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.259"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_senha_login"
        app:lottie_autoPlay="false"
        app:lottie_fileName="lf30_editor_YB5Nbk.json"
        app:lottie_loop="false" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_edt_senha_login"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_senha_login"
        app:layout_constraintEnd_toEndOf="@+id/edt_senha_login"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="@+id/edt_senha_login"
        app:layout_constraintTop_toTopOf="@+id/edt_senha_login"
        app:lottie_autoPlay="false"
        app:lottie_fileName="lf30_editor_hsMmb6.json"
        app:lottie_loop="false" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_person_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_usuario_login"
        app:layout_constraintEnd_toEndOf="@+id/edt_usuario_login"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="@+id/edt_usuario_login"
        app:layout_constraintTop_toTopOf="@+id/edt_usuario_login"
        app:layout_constraintVertical_bias="0.465" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_vpn_key_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_senha_login"
        app:layout_constraintEnd_toEndOf="@+id/edt_senha_login"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="@+id/edt_senha_login"
        app:layout_constraintTop_toTopOf="@+id/edt_senha_login"
        app:layout_constraintVertical_bias="0.558" />

    <TextView
        android:id="@+id/txt_usuario_invalido_login"
        android:layout_width="128dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Usuario invalido"
        android:textColor="@color/colorAccent3"
        android:textSize="17dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_acessar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/anim_usuarioInvalido_login"
        app:layout_constraintTop_toBottomOf="@+id/edt_senha_login"
        app:layout_constraintVertical_bias="0.533" />

</androidx.constraintlayout.widget.ConstraintLayout>